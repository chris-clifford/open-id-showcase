<div class="jumbotron mb-0 d-flex align-items-center flex-column justify-content-center min-10">
  <div class="container text-center">
    <% if @payload %>
      <h1 class="display-3">Welcome, <%= @payload["sub"] %> </h1>
    <% end %>
    <p class="lead">You have been authenticated by Acceptto</p>
    <div class="text-center">
      <a href="/login" class="btn btn-outline-secondary btn-lg">Sign Out</a>
    </div>
  </div>
</div>

<% if @payload %>
<div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto">
        <div id="login-form" class="card mt-3">
            <div class="card-body">
                <div class="card-title text-center">
                    <h3>ID Token</h3>
                    <div class="alert alert-success" role="alert">
                      Signature Verified!
                    </div>
                </div>
                <hr>
                <p><span class="font-weight-bold">User ID:</span> <%= @payload["sub"] %> </p>
                <p><span class="font-weight-bold">Issued By:</span> <%= @payload["iss"] %> </p>
                <p><span class="font-weight-bold">Time Issued:</span> <%= Time.at(@payload["iat"]).strftime("%H:%M:%S") %> </p>
                <p><span class="font-weight-bold">Expires At:</span> <%= Time.at(@payload["exp"]).strftime("%H:%M:%S") %> </p>

            </div>
        </div>
    </div>
</div>
<% end %>
